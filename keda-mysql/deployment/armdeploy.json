{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment_name": {
      "type": "string"
    },
    "location": {
      "defaultValue": "eastus",
      "type": "string"
    },
    "azureContainerRegistryServerUrl": {
      "type": "string"
    },
    "azureContainerRegistryPassword": {
      "type": "securestring"
    },
    "azureContainerRegistryUsername": {
      "type": "string"
    },
    "azureContainerRegistryImageName": {
      "type": "string"
    },
    "azureContainerRegistryImageTag": {
      "type": "string"
    },
    "azureMySqlDbUsername": {
      "type": "securestring"
    },
    "azureMySqlDbPassword": {
      "type": "securestring"
    },
    "azureMySqlDbHost": {
      "type": "securestring"
    },
    "azureMySqlDbName": {
      "type": "securestring"
    },
    "azureMySqlDbPort": {
      "type": "securestring"
    }
  },
  "variables": {
    "logAnalyticsWorkspaceName": "[concat('logs-', parameters('environment_name'))]",
    "appInsightsName": "[concat('appins-', parameters('environment_name'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2021-06-01",
      "name": "[variables('logAnalyticsWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "retentionInDays": 30,
        "features": {
          "searchVersion": 1
        },
        "sku": {
          "name": "PerGB2018"
        }
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('logAnalyticsWorkspaceName'))]"
      ],
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('logAnalyticsWorkspaceName'))]"
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2022-03-01",
      "name": "[parameters('environment_name')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components/', variables('appInsightsName'))]"
      ],
      "properties": {
        "daprAIInstrumentationKey": "[reference(resourceId('Microsoft.Insights/components/', variables('appInsightsName')), '2020-02-02').InstrumentationKey]",
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces/', variables('logAnalyticsWorkspaceName')), '2021-06-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces/', variables('logAnalyticsWorkspaceName')), '2021-06-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "contianerappskedamysql",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments/', parameters('environment_name'))]"
      ],
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments/', parameters('environment_name'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 80
          },
          "secrets": [
            {
              "name": "azurecontainerregistrypasswordref",
              "value": "[parameters('azureContainerRegistryPassword')]"
            },
            {
              "name": "azuremysqldbusernameref",
              "value": "[parameters('azureMySqlDbUsername')]"
            },
            {
              "name": "azuremysqldbpasswordref",
              "value": "[parameters('azureMySqlDbPassword')]"
            },
            {
              "name": "azuremysqldbhostref",
              "value": "[parameters('azureMySqlDbHost')]"
            },
            {
              "name": "azuremysqldbnameref",
              "value": "[parameters('azureMySqlDbName')]"
            },
            {
              "name": "azuremysqldbportref",
              "value": "[parameters('azureMySqlDbPort')]"
            }
          ],
          "registries": [
            {
              "server": "[parameters('azureContainerRegistryServerUrl')]",
              "username": "[parameters('azureContainerRegistryUsername')]",
              "passwordSecretRef": "azurecontainerregistrypasswordref"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "image": "[concat(parameters('azureContainerRegistryServerUrl'), '/', parameters('azureContainerRegistryImageName'), ':', parameters('azureContainerRegistryImageTag'))]",
              "name": "containerappsscalingstorageblob",
              "resources": {
                "cpu": 0.5,
                "memory": "1.0Gi"
              },
              "env": [
                {
                  "name": "AZURE_MYSQL_DB_USERNAME",
                  "secretRef": "azuremysqldbusernameref"
                },
                {
                  "name": "AZURE_MYSQL_DB_PASSWORD",
                  "secretRef": "azuremysqldbpasswordref"
                },
                {
                  "name": "AZURE_MYSQL_DB_HOST",
                  "secretRef": "azuremysqldbhostref"
                },
                {
                  "name": "AZURE_MYSQL_DB_NAME",
                  "secretRef": "azuremysqldbnameref"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 5,
            "rules": [
              {
                "name": "mysql-based-autoscaling",
                "custom": {
                  "type": "mysql",
                  "metadata": {
                    // "query": "SELECT COUNT(id) > 1 FROM 'todos'",
                    "query": "SELECT 0 + 1;",
                    "queryValue": "1"
                  },
                  "auth": [
                    {
                      "secretRef": "azuremysqldbhostref",
                      "triggerParameter": "host"
                    },
                    {
                      "secretRef": "azuremysqldbportref",
                      "triggerParameter": "port"
                    },
                    {
                      "secretRef": "azuremysqldbnameref",
                      "triggerParameter": "dbName"
                    },
                    {
                      "secretRef": "azuremysqldbusernameref",
                      "triggerParameter": "username"
                    },
                    {
                      "secretRef": "azuremysqldbpasswordref",
                      "triggerParameter": "password"
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  ]
}